{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "numInstances": 1,
    "startCommand": "python optimization_bot.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "restartPolicyBackoffSeconds": 30
  }
}