{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m venv venv && . venv/bin/activate && pip install -r requirements.txt && npm install" 
  },
  "deploy": {
    "startCommand": "npm start & . venv/bin/activate && python main.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}